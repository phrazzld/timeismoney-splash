#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged
npx lint-staged

# Check for unwanted lockfiles
if [ -f "package-lock.json" ] || [ -f "yarn.lock" ]; then
  echo "âŒ Error: Unwanted lockfile detected!"
  echo ""
  echo "This project uses pnpm. Please remove:"
  [ -f "package-lock.json" ] && echo "  - package-lock.json"
  [ -f "yarn.lock" ] && echo "  - yarn.lock"
  echo ""
  echo "Use 'pnpm install' to manage dependencies."
  exit 1
fi

# Run pnpm doctor for comprehensive checks including peer dependencies
echo "ğŸ” Running pnpm doctor to check for issues..."
if ! pnpm doctor; then
  echo "âŒ pnpm doctor found issues. Please resolve them before committing."
  echo "ğŸ’¡ Tip: Run 'pnpm doctor' to see detailed diagnostics."
  exit 1
fi